<Page x:Class="SmartFaceAligner.View.Project.ProjectView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartFaceAligner.View.Project"
      xmlns:util="clr-namespace:SmartFaceAligner.Util"
      xmlns:face="clr-namespace:SmartFaceAligner.View.Face"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="ProjectView">
<Page.Resources>
        <util:Bool2Vis x:Key="Bool2Vis"/>
</Page.Resources>
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            
            <TextBox Text="&#xE73E;" Foreground="Green" FontSize="30" FontFamily="Segoe MDL2 Assets"></TextBox>
            <Button Content="Filter faces" Command="{Binding FilterFacesCommand}"></Button>
            <Button Content="Select filter person" Click="ButtonBase_OnClick"></Button>
            <Button Content="Filter person"></Button>
            <Button Content="Sort by age"></Button>
            <Button Content="Align"></Button>

        </StackPanel>
        
        <face:FaceView Width="500" Height="500" VerticalAlignment="Center" HorizontalAlignment="Center" DataContext="{Binding SelectedFace}" Background="Green"/>
        
        <ListView x:Name="ImageList" ItemsSource="{Binding FaceItems}"
                  VerticalAlignment="Bottom" 
                  HorizontalAlignment="Stretch" Height="120" SelectionMode="Multiple"
                 
                  ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Width="100">
                        <Image Width="100" Height="100" Source="{Binding Thumbnail}"></Image>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
          
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
    </Grid>
</Page>
